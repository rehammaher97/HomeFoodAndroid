<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/delivery_img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:src="@drawable/user_2"
            android:layout_centerHorizontal="true"/>

        <RatingBar
            android:layout_below="@id/delivery_img_view"
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/delivery_name_txt_view"
            android:layout_below="@id/simpleRatingBar"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_name"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/delivery_name_txt_view"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/paid_price_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_price_tag"
                android:textSize="30sp"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/paid_price_value_txt_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paid_price_value"
                android:textSize="30sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_layout"
            android:text="@string/submit"
            android:background="#008000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:padding="10dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>